<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FFLocker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FFLocker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FFLocker">

    <Grid x:Name="AppTitleBar">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBox
                    x:Name="PathTextBox"
                    Header="File or Folder Path"
                    IsReadOnly="True"
                    PlaceholderText="Select a file or folder" />
                <Button
                    x:Name="BrowseButton"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Stretch"
                    Click="BrowseButton_Click"
                    Content="Browse..." />
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,8,0,8" Orientation="Horizontal">
                <RadioButton
                    x:Name="FileRadioButton"
                    Content="File"
                    GroupName="PathType"
                    IsChecked="True" />
                <RadioButton
                    x:Name="FolderRadioButton"
                    Margin="8,0,0,0"
                    Content="Folder"
                    GroupName="PathType" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,8"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    x:Name="LockButton"
                    HorizontalAlignment="Stretch"
                    Click="LockButton_Click"
                    Content="Lock" />
                <Button
                    x:Name="UnlockButton"
                    HorizontalAlignment="Stretch"
                    Click="UnlockButton_Click"
                    Content="Unlock" />
            </StackPanel>

            <Grid Grid.Row="3" Margin="0,8">
                <ListView
                    x:Name="LockedItemsListView"
                    Header="Locked Items"
                    Visibility="Collapsed" />
                <Grid x:Name="LogGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0,0,0,4" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,8,0"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Text="Log" />
                        <Button
                            x:Name="ClearLogButton"
                            Click="ClearLogButton_Click"
                            Content="Clear" />
                    </StackPanel>
                    <TextBox
                        x:Name="LogTextBox"
                        Grid.Row="1"
                        AcceptsReturn="True"
                        IsReadOnly="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" />
                </Grid>
            </Grid>

            <Grid Grid.Row="4" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <CheckBox
                        x:Name="ShowInfoCheckBox"
                        Checked="ShowInfoCheckBox_Checked"
                        Content="Log"
                        Unchecked="ShowInfoCheckBox_Unchecked" />
                    <Button
                        x:Name="ShowLockedButton"
                        Click="ShowLockedButton_Click"
                        Content="Show Locked Items" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <CheckBox
                        x:Name="ContextMenuCheckBox"
                        Checked="ContextMenuCheckBox_Checked"
                        Content="Context Menu"
                        Unchecked="ContextMenuCheckBox_Unchecked" />
                    <ToggleSwitch
                        x:Name="DarkModeCheckBox"
                        Toggled="DarkMode_Toggled"
                        OffContent="Light"
                        OnContent="Dark" />
                    <Button
                        x:Name="AboutButton"
                        Click="AboutButton_Click"
                        Content="About" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>